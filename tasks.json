{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-g",
        "-Wall",
        "${relativeFile}",
        "-O0",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.o",
        "-std=c++17"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}.o",
      // "args": [
      // ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": ["build"]
    }
  ]
}
